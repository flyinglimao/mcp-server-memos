{
  "name": "@0xlimao/memos-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Memos - a privacy-focused note-taking application",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "memos-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"No tests yet\" && exit 0",
    "test:tools": "npx tsx tests/test-tools.ts"
  },
  "keywords": [
    "mcp",
    "memos",
    "ai",
    "notes",
    "model-context-protocol",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyinglimao/mcp-server-memos.git"
  },
  "bugs": {
    "url": "https://github.com/flyinglimao/mcp-server-memos/issues"
  },
  "homepage": "https://github.com/flyinglimao/mcp-server-memos#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}